
<div class="navbar border  ">
    <span><i class="fa-duotone fa-camera-retro"></i></span>
    <span ><%= link_to "My list", lists_path(@list) %>  <%= link_to "new list", new_list_path(@list) %></span>
</div>

<div class="pik  container mt-20 mb-4 d-flex ">
    <h1>Save any kind of movies</h1>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-success text-white btn-lg " %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6  mb-3">
        <%= link_to list_path(list), class:"text-white text-decoration-none text-center" do %>
          <div class="dodo fs-3 ">
            <%= list.name %>


          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
